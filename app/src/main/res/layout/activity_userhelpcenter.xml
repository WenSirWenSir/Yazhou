id:layout_marginLeft="5dp"                android:background="#ffffff"                android:layout_marginRight="5dp"                android:orientation="vertical"                >                                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:textSize="20sp"                    android:textStyle="bold"                    android:paddingLeft="10dp"                    android:textColor="#000000"                    android:text="帮助选项"                    android:layout_marginTop="10dp"                    />                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="20dp"                    >                    <!--包含3个服务器指南-->                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="wrap_content"                        android:layout_weight="1"                        >                        <ImageView                            android:layout_width="30dp"                            android:layout_height="30dp"                            android:layout_centerHorizontal="true"                            android:layout_marginTop="5dp"                            android:src="@drawable/ico_clock"                            android:id="@+id/activity_userhelpcenter_btnFreight"                            />                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_below="@id/activity_userhelpcenter_btnFreight"                            android:id="@+id/activity_userhelpcenter_btnFreightTitle"                            android:textSize="10sp"                            android:layout