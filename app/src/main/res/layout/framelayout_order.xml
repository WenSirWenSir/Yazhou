<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#ffffff">    <RelativeLayout        android:id="@+id/activity_usercomment_title"        android:layout_width="match_parent"        android:layout_height="35dp"        android:layout_alignParentTop="true"        android:background="@color/TextAndBodyColor">        <TextView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_centerInParent="true"            android:gravity="center|left"            android:paddingLeft="15dp"            android:text="民以食为天,万事吃为先"            android:textColor="#000000"            android:textSize="15sp"            android:textStyle="bold" />    </RelativeLayout>    <ScrollView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginTop="35dp"        android:scrollbars="none">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">            <RelativeLayout                android:id="@+id/framelayout_shopimage"                android:layout_width="match_parent"                android:layout_height="200dp">                <ImageView                    android:layout_width="200dp"                    android:layout_height="200dp"                    android:layout_centerInParent="true"                    android:src="@drawable/timg" />            </RelativeLayout>            <!--配送详情-->            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_below="@id/framelayout_shopimage"                android:background="#f9f9f9"                android:paddingTop="10dp"                android:paddingBottom="10dp">                <!--底层模板-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="100dp"                    android:background="@color/TextAndBodyColor">                </LinearLayout>                <LinearLayout                    android:id="@+id/framelayout_OrderListbody"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="50dp"                    android:layout_marginRight="10dp"                    android:background="@drawable/border_radius_ltop_lright"                    android:orientation="vertical">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="10dp"                        android:orientation="vertical">                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_gravity="center|left"                            android:layout_marginLeft="10dp"                            android:text="送至:"                            android:textColor="#000000"                            android:textSize="15sp"                            android:textStyle="bold" />                        <RelativeLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="10dp">                            <TextView                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_gravity="center|left"                                android:layout_marginLeft="10dp"                                android:maxLines="2"                                android:paddingLeft="10dp"                                android:paddingRight="35dp"                                android:text="福建省龙岩市上杭县旧县乡梅西村上坊路21号"                                android:textColor="#000000"                                android:textSize="14sp"                                android:textStyle="bold" />                            <ImageView                                android:layout_width="20dp"                                android:layout_height="20dp"                                android:layout_alignParentRight="true"                                android:layout_marginRight="10dp"                                android:src="@drawable/ico_rightarrow" />                        </RelativeLayout>                    </LinearLayout>                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="10dp"                        android:layout_marginLeft="30dp"                        android:layout_marginTop="10dp"                        android:layout_marginRight="30dp"                        android:scaleType="fitXY"                        android:src="@drawable/ico_bar" />                    <!--收货人或者是单位-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="10dp"                        android:orientation="vertical">                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_gravity="center|left"                            android:layout_marginLeft="10dp"                            android:text="收货人(或者单位)"                            android:textColor="#000000"                            android:textSize="15sp"                            android:textStyle="bold" />                        <RelativeLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="10dp"                            android:layout_marginBottom="10dp">                            <TextView                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_gravity="center|left"                                android:layout_marginLeft="10dp"                                android:maxLines="2"                                android:paddingLeft="10dp"                                android:paddingRight="35dp"                                android:text="翁启鑫(15206036936)"                                android:textColor="#000000"                                android:textSize="14sp"                                android:textStyle="bold" />                        </RelativeLayout>                    </LinearLayout>                    <!--指定预定的时间-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="10dp"                        android:orientation="vertical">                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_gravity="center|left"                            android:layout_marginLeft="10dp"                            android:text="预定时间"                            android:textColor="#000000"                            android:textSize="15sp"                            android:textStyle="bold" />                        <RelativeLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="10dp"                            android:layout_marginBottom="10dp">                            <TextView                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_gravity="center|left"                                android:layout_marginLeft="10dp"                                android:maxLines="2"                                android:paddingLeft="10dp"                                android:paddingRight="35dp"                                android:text="2018年10月21 (12:00)左右送达"                                android:textColor="#000000"                                android:textSize="14sp"                                android:textStyle="bold" />                        </RelativeLayout>                    </LinearLayout>                    <!--配送订购按钮-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="20dp"                        android:orientation="vertical">                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_gravity="center"                            android:background="@color/TextAndBodyColor"                            android:gravity="center"                            android:padding="12dp"                            android:text="生成订单"                            android:textColor="#000000"                            android:textSize="15sp"                            android:textStyle="bold" />                    </LinearLayout>                </LinearLayout>                <!--广告显示区  由服务器指定是否需要展示广告-->                <ImageView                    android:layout_width="match_parent"                    android:layout_height="100dp"                    android:layout_below="@id/framelayout_OrderListbody"                    android:src="@drawable/ico_addr"                    android:layout_marginTop="10dp"                    android:layout_marginLeft="10dp"                    android:layout_marginRight="10dp"                    />            </RelativeLayout>        </RelativeLayout>    </ScrollView></RelativeLayout>