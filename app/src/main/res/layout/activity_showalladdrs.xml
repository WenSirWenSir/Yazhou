<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:fitsSystemWindows="true">    <RelativeLayout        android:id="@+id/activity_usercomment_title"        android:layout_width="match_parent"        android:layout_height="35dp"        android:layout_alignParentTop="true"        android:background="@color/TextAndBodyColor">        <TextView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_centerInParent="true"            android:gravity="center"            android:text="配送地址"            android:textColor="#000000"            android:textSize="15sp"            android:textStyle="bold" />        <TextView            android:id="@+id/activity_showalladdrs_btnRedact"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="10dp"            android:text="管理"            android:textColor="#666666"            android:textSize="12sp"            android:textStyle="bold" />        <ImageView            android:id="@+id/activity_showalladdrs_icoBack"            android:layout_width="30dp"            android:layout_height="20dp"            android:layout_centerVertical="true"            android:layout_marginLeft="10dp"            android:src="@drawable/ico_back" />    </RelativeLayout>    <ListView        android:id="@+id/activity_showalladdrs_listview"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginTop="35dp"        android:layout_marginBottom="50dp"        android:scrollbars="none"        android:visibility="gone">    </ListView>    <RelativeLayout        android:id="@+id/activity_showalladdrs_addaddrsbody"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:visibility="gone"        android:layout_marginTop="35dp"        android:layout_marginBottom="50dp">        <ImageView            android:id="@+id/activity_showalladdrs_btnaddrs"            android:layout_width="100dp"            android:layout_height="100dp"            android:layout_centerInParent="true"            android:src="@drawable/ico_nodata" />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@id/activity_showalladdrs_btnaddrs"            android:layout_centerHorizontal="true"            android:layout_marginTop="10dp"            android:text="数据去外太空旅行了"            android:textColor="#666666"            android:textSize="12sp"            android:textStyle="bold" />    </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="40dp"        android:layout_alignParentBottom="true"        android:layout_marginBottom="5dp"        android:background="#ffffff"        android:paddingLeft="30dp"        android:paddingRight="30dp">        <TextView            android:id="@+id/activity_showalladdrs_btnNewaddr"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_marginTop="5dp"            android:background="@color/TextAndBodyColor"            android:gravity="center"            android:text="新增收货地址"            android:textColor="#000000"            android:textSize="13sp"            android:textStyle="bold" />    </LinearLayout></RelativeLayout>