<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/activity_usercomment_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/TextAndBodyColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="撰写您的评论"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/activity_useraddhome_addr_btnback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ico_back" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f1f1f1"
            android:orientation="vertical">

            <!--拍摄的标志图片-->
            <RelativeLayout
                android:id="@+id/activity_usercomment_opencameraBody"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/activity_usercomment_icoCamera"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ico_camera" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_usercomment_icoCamera"
                    android:gravity="center"
                    android:text="点击上方图片拍摄"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <!--撰写评论区域-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/activity_usercomment_opencameraBody"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_mapsearch_input"
                    android:id="@+id/activity_usercommend_etComment"

                    >


                </EditText>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <!--保存评论-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="#f1f1f1"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/TextAndBodyColor"
            android:gravity="center"
            android:text="发布评论"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>