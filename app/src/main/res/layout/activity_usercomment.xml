<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f1f1f1"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <!--拍摄的标志图片-->
            <RelativeLayout
                android:id="@+id/activity_usercomment_opencameraBody"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >

                <ImageView
                    android:id="@+id/activity_usercomment_icoCamera"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ico_camera" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_usercommend_opencameratitle"
                    android:layout_below="@id/activity_usercomment_icoCamera"
                    android:gravity="center"
                    android:text="点击上方图片拍摄"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <!--撰写评论区域-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/activity_usercomment_opencameraBody"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="#ffffff">

                <EditText
                    android:id="@+id/activity_usercommend_etComment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_mapsearch_input"
                    android:gravity="center_horizontal|left"
                    android:padding="10dp"
                    android:textColor="#666666"
                    android:text="撰写评论时,请您准守互联网言语评论守则.如果有什么服务上的不足.您可以联系我们哦"
                    android:textSize="15dp"
                    android:textStyle="bold">


                </EditText>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <!--保存评论-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/activity_usercomment_btnOrderComment"
        android:background="@color/TextAndBodyColor"
        android:gravity="center"
        android:text="发布评论"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/activity_usercomment_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/TextAndBodyColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="撰写您的评论"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/activity_useraddhome_addr_btnback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ico_back" />
    </RelativeLayout>


</RelativeLayout>