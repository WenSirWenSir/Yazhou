<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/TextAndBodyColor"    android:orientation="vertical">    <!--订单编号-->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#ffffff">        <localViews.ShowNumberTextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:paddingLeft="15dp"            android:paddingTop="5dp"            android:paddingBottom="5dp"            android:layout_marginTop="5dp"            android:text="运送单号:YL5201314"            android:textColor="#000000"            android:textSize="13sp"            android:textStyle="bold" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="#f9f9f9"        android:paddingTop="10dp"        >        <LinearLayout            android:layout_width="120dp"            android:layout_height="120dp"            android:padding="20dp">            <ImageView                android:layout_width="match_parent"                android:layout_height="match_parent"                android:src="@drawable/timg" />        </LinearLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="120dp"            android:orientation="vertical"            >            <ImageView                android:layout_width="20dp"                android:layout_height="20dp"                android:layout_centerVertical="true"                android:layout_toLeftOf="@id/item_sendorder_intime"                android:layout_marginRight="5dp"                android:layout_alignBottom="@id/item_sendorder_intime"                android:src="@drawable/ico_clock"/>            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:textSize="12sp"                android:layout_alignParentTop="true"                android:layout_centerVertical="true"                android:layout_marginTop="5dp"                android:textColor="#000000"                android:paddingRight="5dp"                android:maxLines="2"                android:ellipsize="end"                android:text="早早专送-[早餐鸭粥]5元/单人份500克我喜欢刘钰"                android:textStyle="bold"                />            <localViews.ShowNumberTextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="35sp"                android:layout_centerVertical="true"                android:layout_alignParentRight="true"                android:layout_marginRight="15dp"                android:layout_marginTop="15dp"                android:text="5:30"                android:textStyle="bold"                android:id="@+id/item_sendorder_intime"                android:gravity="center|right"                android:paddingRight="15dp"                android:textColor="@color/TextAndBodyColor"                />            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:textSize="12sp"                android:text="预定于:2019年23月29号"                android:layout_marginTop="15dp"                android:gravity="center|right"                android:textColor="#666666"                android:layout_centerVertical="true"                android:layout_alignParentBottom="true"                android:layout_marginBottom="5dp"                android:layout_marginRight="15dp"                android:textStyle="bold"                />        </RelativeLayout>    </LinearLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingBottom="5dp"        android:paddingTop="5dp"        android:layout_marginBottom="2dp"        android:background="#ffffff">        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:orientation="horizontal"            android:id="@+id/item_sendorder_pay"            >            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="￥"                android:textSize="12sp"                android:paddingLeft="15dp"                android:textStyle="bold"                android:textColor="#666666"                />            <localViews.ShowNumberTextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="5"                android:textStyle="bold"                android:textSize="30sp"                android:paddingLeft="5dp"                android:paddingTop="10dp"                android:paddingBottom="10dp"                android:textColor="#f30d88"                />        </LinearLayout>        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:textSize="12sp"            android:layout_below="@id/item_sendorder_pay"            android:paddingLeft="15dp"            android:layout_marginTop="5dp"            android:text="资金已经通过微信支付成功,订单到达时.请勿付任何费用"            />        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="申请退款"            android:id="@+id/item_sendorder_btnrefund"            android:layout_alignParentRight="true"            android:paddingLeft="15dp"            android:paddingTop="5dp"            android:layout_centerVertical="true"            android:layout_marginRight="15dp"            android:paddingRight="15dp"            android:paddingBottom="5dp"            />    </RelativeLayout></LinearLayout>