<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#ffffff"    android:fitsSystemWindows="true">    <RelativeLayout        android:id="@+id/activity_usercomment_title"        android:layout_width="match_parent"        android:layout_height="35dp"        android:layout_alignParentTop="true"        android:background="@color/TextAndBodyColor">        <TextView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_centerInParent="true"            android:gravity="center"            android:text="兑卷中心"            android:textColor="#000000"            android:textSize="15sp"            android:textStyle="bold" />        <ImageView            android:id="@+id/activity_exchange_icoBack"            android:layout_width="30dp"            android:layout_height="20dp"            android:layout_centerVertical="true"            android:layout_marginLeft="10dp"            android:src="@drawable/ico_back" />    </RelativeLayout>    <ScrollView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginTop="35dp">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">            <!--设置背景-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="100dp"                android:background="@color/TextAndBodyColor">            </LinearLayout>            <LinearLayout                android:id="@+id/activity_exchangeInputBackground"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_marginTop="50dp"                android:layout_marginRight="10dp"                android:background="#efefef"                android:orientation="vertical"                android:paddingLeft="5dp"                android:paddingRight="5dp"                android:paddingBottom="20dp">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:paddingLeft="15dp"                    android:paddingTop="5dp"                    android:text="兑换免费粥卷"                    android:textColor="#000000"                    android:textSize="20sp" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:paddingLeft="15dp"                    android:paddingTop="5dp"                    android:text="请输入8位兑换码"                    android:textColor="#666666"                    android:textSize="15sp" />                <!--输入兑换码的EDIT-->                <LinearLayout                    android:id="@+id/activity_exchangeInputExchangeCodeBody"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="30dp">                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="40dp"                        android:layout_weight="1">                        <EditText                            android:layout_width="40dp"                            android:layout_height="40dp"                            android:layout_centerInParent="true"                            android:gravity="center"                            android:inputType="number"                            android:maxLength="1"                            android:textSize="12sp" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="40dp"                        android:layout_weight="1">                        <EditText                            android:layout_width="40dp"                            android:layout_height="40dp"                            android:layout_centerInParent="true"                            android:gravity="center"                            android:inputType="number"                            android:maxLength="1"                            android:textSize="12sp" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="40dp"                        android:layout_weight="1">                        <EditText                            android:layout_width="40dp"                            android:layout_height="40dp"                            android:layout_centerInParent="true"                            android:gravity="center"                            android:inputType="number"                            android:maxLength="1"                            android:textSize="12sp" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="40dp"                        android:layout_weight="1">                        <EditText                            android:layout_width="40dp"                            android:layout_height="40dp"                            android:layout_centerInParent="true"                            android:gravity="center"                            android:inputType="number"                            android:maxLength="1"                            android:textSize="12sp" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="40dp"                        android:layout_weight="1">                        <EditText                            android:layout_width="40dp"                            android:layout_height="40dp"                            android:layout_centerInParent="true"                            android:gravity="center"                            android:inputType="number"                            android:maxLength="1"                            android:textSize="12sp" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="40dp"                        android:layout_weight="1">                        <EditText                            android:layout_width="40dp"                            android:layout_height="40dp"                            android:layout_centerInParent="true"                            android:gravity="center"                            android:inputType="number"                            android:maxLength="1"                            android:textSize="12sp" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="40dp"                        android:layout_weight="1">                        <EditText                            android:layout_width="40dp"                            android:layout_height="40dp"                            android:layout_centerInParent="true"                            android:gravity="center"                            android:inputType="number"                            android:maxLength="1"                            android:textSize="12sp" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="40dp"                        android:layout_weight="1">                        <EditText                            android:layout_width="40dp"                            android:layout_height="40dp"                            android:layout_centerInParent="true"                            android:gravity="center"                            android:inputType="number"                            android:maxLength="1"                            android:textSize="12sp" />                    </RelativeLayout>                </LinearLayout>                <!--显示剩余多少张-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="10dp"                    android:gravity="bottom|right"                    android:orientation="horizontal"                    android:paddingRight="15dp">                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="剩余"                        android:textSize="13sp" />                    <localViews.ShowNumberTextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="5dp"                        android:layout_marginRight="5dp"                        android:text="3000"                        android:textColor="#f30d88"                        android:textSize="17sp" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="张"                        android:textSize="13sp" />                </LinearLayout>            </LinearLayout>            <!--显示备注信息-->            <LinearLayout                android:id="@+id/activity_exchangeMessageBackground"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_below="@id/activity_exchangeInputBackground"                android:layout_marginTop="15dp"                android:background="#ffffff"                android:orientation="vertical">                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:paddingLeft="15dp"                    android:text="兑换须知"                    android:textColor="#000000"                    android:textSize="15sp" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp"                    android:paddingLeft="15dp"                    android:text="[1]单人单天使用的兑换卷只能使用一张"                    android:textSize="10sp" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp"                    android:paddingLeft="15dp"                    android:text="[2]在用户使用/获取/过程中,如果出现违规操作。比如作弊获取,恶意刷取,虚假信息等。我们有权取消该兑换卷。并有权封停账户以及采取其他相应的法律措施的权利"                    android:textSize="10sp" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp"                    android:paddingLeft="15dp"                    android:text="[3]已成功使用的兑换卷,不支持改/退/等操作。不予退货处理,在使用兑换卷进行兑换时,请仔细核对收货的地址,收货人员的电话和姓名,以免造成不必要的麻烦"                    android:textSize="10sp" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginTop="5dp"                    android:paddingLeft="15dp"                    android:text="[4]已经领取的兑换卷必须在当天的凌晨也就是0:00之前使用,过期我们默认用户自己放弃使用。"                    android:textSize="10sp" />            </LinearLayout>            <!--广告的位置-->            <LinearLayout                android:layout_width="match_parent"                android:layout_height="100dp"                android:layout_below="@id/activity_exchangeMessageBackground"                android:layout_marginLeft="1dp"                android:layout_marginTop="25dp"                android:layout_marginRight="1dp">                <ImageView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:src="@drawable/ico_del" />            </LinearLayout>        </RelativeLayout>    </ScrollView></RelativeLayout>