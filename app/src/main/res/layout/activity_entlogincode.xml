<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/activity_login_headbody"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:background="@color/TextAndBodyColor"
            android:orientation="horizontal">


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:gravity="center|left"
            android:paddingLeft="25dp"
            android:text="输入验证码"
            android:textColor="@color/TextAndBodyColor"
            android:background="#afafaf"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:text="验证码已经发送至您的手机,请检查您的短信"
            android:textColor="#000000"
            android:textSize="15dp" />
        <!--这个是注册输入的背景-->
        <LinearLayout
            android:id="@+id/activity_login_inputmethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:orientation="vertical"
            android:paddingBottom="35dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:paddingLeft="15dp"
                android:id="@+id/activity_entlogincode_inCodeBody"
                android:paddingRight="15dp"
                android:layout_marginTop="20dp"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:ignore="Suspicious0dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_radius_reg_input"
                        android:inputType="number"
                        android:gravity="center"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:paddingBottom="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:ignore="Suspicious0dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:maxLength="1"
                        android:background="@drawable/border_radius_reg_input"
                        android:inputType="number"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    tools:ignore="Suspicious0dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_radius_reg_input"
                        android:inputType="number"
                        android:gravity="center"
                        android:maxLines="1"
                        android:maxLength="1"
                        android:paddingBottom="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    tools:ignore="Suspicious0dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_radius_reg_input"
                        android:inputType="number"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:maxLines="1"
                        android:maxLength="1"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/activity_login_inputmethod"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:paddingLeft="100dp"
            android:paddingRight="100dp">

            <TextView
                android:id="@+id/activity_entlogincode_btnlogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_radius_ltop_lright"
                android:gravity="center"
                android:text="50秒之后可以再次获取"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/activity_login_headIco"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_radius_order_big">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ico_key"

                />
        </RelativeLayout>


    </RelativeLayout>


</ScrollView>