<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="#ffffff"    android:paddingBottom="10dp"    android:orientation="horizontal">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_weight="1"        android:orientation="vertical">        <!--addrs -->        <TextView            android:id="@+id/item_listaddr_addrs"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="5dp"            android:ellipsize="end"            android:gravity="center|left"            android:maxLines="2"            android:paddingLeft="10dp"            android:paddingRight="10dp"            android:text="龙岩市上杭县上杭大道  北园路园一巷21号翁旗鑫"            android:textColor="#202020"            android:textSize="15sp" />        <!--name-->        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="10dp"            android:layout_marginTop="10dp"            android:id="@+id/item_listaddr_people"            android:text="翁启鑫(18063790393)"            android:textColor="#666666"            android:textSize="15sp" />        <!-- tel -->    </LinearLayout>    <LinearLayout        android:layout_width="80dp"        android:layout_height="match_parent"        android:layout_weight="0"        android:orientation="horizontal"        android:gravity="center_vertical"        >        <ImageView            android:layout_width="25dp"            android:id="@+id/item_listaddr_btnEdit"            android:layout_height="30dp"            android:src="@drawable/ico_edit" />        <ImageView            android:layout_width="25dp"            android:layout_height="25dp"            android:id="@+id/item_listaddr_btnDel"            android:layout_marginLeft="10dp"            android:src="@drawable/ico_del" />    </LinearLayout></LinearLayout>