<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:background="#efefef"    android:gravity="center"    android:padding="20dp"    android:orientation="vertical"    >        <ImageView        android:layout_width="60dp"        android:layout_height="60dp"        android:id="@+id/item_wait_img"        android:scaleType="center"        android:src="@drawable/ico_refresh"        />    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:textSize="13dp"        android:textStyle="bold"        android:textColor="#000000"        android:id="@+id/item_wait_msg"        android:layout_marginTop="10dp"        /></LinearLayout>