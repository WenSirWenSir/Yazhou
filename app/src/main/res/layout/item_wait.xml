<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="150dp"    android:layout_height="150dp"    android:gravity="center"    android:orientation="vertical"    android:padding="10dp"    >        <ImageView            android:id="@+id/item_wait_img"            android:layout_width="70dp"            android:layout_height="70dp"            android:scaleType="center"            android:layout_centerInParent="true"            android:src="@drawable/ico_refresh" />        <ImageView            android:layout_width="40dp"            android:layout_height="40dp"            android:scaleType="center"            android:src="@drawable/ico_rotate"            android:layout_centerInParent="true"            />        <TextView            android:id="@+id/item_wait_msg"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerHorizontal="true"            android:text="请等待"            android:textColor="#000000"            android:layout_alignParentBottom="true"            android:textSize="13dp"            android:textStyle="bold" /></RelativeLayout>