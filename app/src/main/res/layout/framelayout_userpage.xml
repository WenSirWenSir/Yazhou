<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#ffffff"    android:fitsSystemWindows="true">    <RelativeLayout        android:id="@+id/activity_usercomment_title"        android:layout_width="match_parent"        android:layout_height="35dp"        android:layout_alignParentTop="true"        android:background="@color/TextAndBodyColor">        <TextView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_centerInParent="true"            android:gravity="center"            android:text="个人中心"            android:textColor="#000000"            android:textSize="15sp"            android:textStyle="bold" />    </RelativeLayout>    <ScrollView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:scrollbars="none"        android:layout_marginTop="35dp">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="#f2f2f2"            android:orientation="vertical">            <!--User Context list body-->            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="200dp"                android:background="#f2f2f2">                <!--first body-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="100dp"                    android:layout_alignParentTop="true"                    android:background="@color/TextAndBodyColor">                </LinearLayout>                <!--center body-->                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="130dp"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="50dp"                    android:layout_marginRight="10dp"                    android:id="@+id/activity_usercontext_fBackground"                    >                    <!--User page-->                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="65dp"                        android:layout_alignParentBottom="true"                        android:layout_marginLeft="1dp"                        android:layout_marginRight="1dp"                        android:layout_marginBottom="5dp"                        android:background="#ffffff"                        android:orientation="horizontal"                        android:paddingTop="10dp"                        >                        <RelativeLayout                            android:layout_width="0dp"                            android:layout_height="65dp"                            android:layout_weight="1"                            android:background="#ffffff">                            <TextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_centerHorizontal="true"                                android:layout_marginTop="5dp"                                android:gravity="center"                                android:text="余额"                                android:textColor="#666666"                                android:textSize="13sp"                                android:textStyle="bold" />                            <localViews.ShowNumberTextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_centerHorizontal="true"                                android:layout_marginTop="25dp"                                android:text="300"                                android:textColor="#000000"                                android:textSize="17sp"                                android:textStyle="bold" />                        </RelativeLayout>                        <RelativeLayout                            android:layout_width="0dp"                            android:layout_height="65dp"                            android:layout_weight="1"                            android:background="#ffffff">                            <TextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_centerHorizontal="true"                                android:layout_marginTop="5dp"                                android:gravity="center"                                android:text="积分"                                android:textColor="#666666"                                android:textSize="13sp"                                android:textStyle="bold" />                            <localViews.ShowNumberTextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_centerHorizontal="true"                                android:layout_marginTop="25dp"                                android:text="300"                                android:textColor="#000000"                                android:textSize="17sp"                                android:textStyle="bold" />                        </RelativeLayout>                        <RelativeLayout                            android:layout_width="0dp"                            android:layout_height="65dp"                            android:layout_weight="1"                            android:background="#ffffff">                            <TextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_centerHorizontal="true"                                android:layout_marginTop="5dp"                                android:gravity="center"                                android:text="优惠卷"                                android:textColor="#666666"                                android:textSize="13sp"                                android:textStyle="bold" />                            <localViews.ShowNumberTextView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_centerHorizontal="true"                                android:layout_marginTop="25dp"                                android:text="100张"                                android:textColor="#000000"                                android:textSize="17sp"                                android:textStyle="bold" />                        </RelativeLayout>                    </LinearLayout>                </RelativeLayout>                <!--user img body-->                <RelativeLayout                    android:id="@+id/activity_usercontext_headImg"                    android:layout_width="100dp"                    android:layout_height="100dp"                    android:layout_marginLeft="20dp"                    android:layout_marginTop="5dp">                    <ImageView                        android:layout_width="70dp"                        android:layout_height="70dp"                        android:layout_centerInParent="true"                        android:src="@drawable/ico_main" />                </RelativeLayout>                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="80dp"                    android:layout_toRightOf="@id/activity_usercontext_headImg"                    android:text="民以食为天,万事吃为先"                    android:textColor="#000000"                    android:textSize="15sp"                    android:textStyle="bold" />            </RelativeLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:layout_marginBottom="30dp"                android:orientation="vertical"                android:paddingBottom="20dp">                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="100dp"                    android:layout_margin="3dp"                    android:background="#ffffff"                    android:orientation="horizontal">                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="100dp"                        android:layout_weight="1">                        <ImageView                            android:id="@+id/activity_usercontext_btnPage_addrImage"                            android:layout_width="50dp"                            android:layout_height="50dp"                            android:layout_centerHorizontal="true"                            android:layout_marginTop="10dp"                            android:src="@drawable/ico_mapaddr" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_below="@id/activity_usercontext_btnPage_addrImage"                            android:layout_marginTop="5dp"                            android:gravity="center"                            android:text="收件地址"                            android:textColor="#999999"                            android:textSize="12sp"                            android:textStyle="bold" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="100dp"                        android:layout_weight="1">                        <ImageView                            android:id="@+id/activity_usercontext_btnPage_btnorderpage"                            android:layout_width="50dp"                            android:layout_height="50dp"                            android:layout_centerHorizontal="true"                            android:layout_marginTop="10dp"                            android:src="@drawable/ico_orderpage" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_below="@id/activity_usercontext_btnPage_btnorderpage"                            android:layout_marginTop="5dp"                            android:gravity="center"                            android:text="我的订单"                            android:textColor="#999999"                            android:textSize="12sp"                            android:textStyle="bold" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="100dp"                        android:layout_weight="1">                        <ImageView                            android:id="@+id/framelayout_userpage_btnServicePeo"                            android:layout_width="50dp"                            android:layout_height="50dp"                            android:layout_centerHorizontal="true"                            android:layout_marginTop="10dp"                            android:src="@drawable/ico_servicepeople" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_below="@id/framelayout_userpage_btnServicePeo"                            android:layout_marginTop="5dp"                            android:gravity="center"                            android:text="联系客服"                            android:textColor="#999999"                            android:textSize="12sp"                            android:textStyle="bold" />                    </RelativeLayout>                </LinearLayout>                <!--second page-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="100dp"                    android:layout_margin="3dp"                    android:background="#ffffff"                    android:orientation="horizontal">                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="100dp"                        android:layout_weight="1">                        <ImageView                            android:id="@+id/activity_usercontext_btnUserHelp"                            android:layout_width="50dp"                            android:layout_height="50dp"                            android:layout_centerHorizontal="true"                            android:layout_marginTop="10dp"                            android:src="@drawable/ico_help" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_below="@id/activity_usercontext_btnUserHelp"                            android:layout_marginTop="5dp"                            android:gravity="center"                            android:text="帮助中心"                            android:textColor="#999999"                            android:textSize="12sp"                            android:textStyle="bold" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="100dp"                        android:layout_weight="1">                        <ImageView                            android:id="@+id/activity_usercontext_btnExchange"                            android:layout_width="50dp"                            android:layout_height="50dp"                            android:layout_centerHorizontal="true"                            android:layout_marginTop="10dp"                            android:src="@drawable/ico_exchange" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_below="@id/activity_usercontext_btnExchange"                            android:layout_marginTop="5dp"                            android:gravity="center"                            android:text="兑换中心"                            android:textColor="#999999"                            android:textSize="12sp"                            android:textStyle="bold" />                    </RelativeLayout>                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="100dp"                        android:layout_weight="1">                        <ImageView                            android:id="@+id/activity_usercontext_btnPage_3"                            android:layout_width="50dp"                            android:layout_height="50dp"                            android:layout_centerHorizontal="true"                            android:layout_marginTop="10dp"                            android:src="@drawable/ico_share" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_below="@id/activity_usercontext_btnPage_3"                            android:layout_marginTop="5dp"                            android:gravity="center"                            android:text="分享领卷"                            android:textColor="#999999"                            android:textSize="12sp"                            android:textStyle="bold" />                    </RelativeLayout>                </LinearLayout>                <!--three page-->                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="100dp"                    android:background="#ffffff"                    android:layout_marginLeft="3dp"                    android:layout_marginRight="3dp"                    android:orientation="horizontal">                    <RelativeLayout                        android:layout_width="0dp"                        android:layout_height="100dp"                        android:layout_weight="1">                        <ImageView                            android:id="@+id/activity_userpage_btnBackAccount"                            android:layout_width="50dp"                            android:layout_height="50dp"                            android:layout_centerHorizontal="true"                            android:layout_marginTop="10dp"                            android:src="@drawable/ico_logout" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_below="@id/activity_userpage_btnBackAccount"                            android:layout_marginTop="5dp"                            android:gravity="center"                            android:text="退出早早"                            android:textColor="#999999"                            android:textSize="12sp"                            android:textStyle="bold" />                    </RelativeLayout>                </LinearLayout>                <!--if want show a message-->                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="150dp"                    android:background="#ffffff">                    <ImageView                        android:layout_width="match_parent"                        android:layout_height="150dp"                        android:src="@drawable/ico_servicepeople"                        />                </RelativeLayout>            </LinearLayout>        </LinearLayout>    </ScrollView></RelativeLayout>